<Window x:Class="FamilyTree.Diagram.Test.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyTree.Diagram.Test.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!--  scroll viewer  -->
        <Style x:Key="ScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
            <Setter Property="HorizontalScrollBarVisibility" Value="Hidden" />
            <Setter Property="VerticalScrollBarVisibility" Value="Hidden" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Button Content="Open" Click="ButtonBase_OnClick"></Button>
        </StackPanel>

        <ScrollViewer x:Name="ScrollViewer" Style="{StaticResource ScrollViewerStyle}" 
                      Grid.Row="1">
            <Grid x:Name="Grid">
                <!--<diagram:Diagram x:Name="Diagram" />-->
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
